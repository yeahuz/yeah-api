	}
	@button.Secondary(button.Props{Size: "lg", Class: "w-full mt-2 js-enabled"}) {
		<svg class="w-6 h-6 mr-2" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
			<circle cx="16" cy="16" r="14" fill="url(#paint0_linear_1334_735)"></circle>
